        function startConsoleStream() {
            if (isConsoleStreaming) return; // Already streaming

            const statusEl = document.getElementById('consoleStreamStatus');
            const output = document.getElementById('consoleOutput');

            // Update UI
            statusEl.innerHTML = '<i class="fas fa-spinner fa-spin"></i> Connecting...';
            statusEl.style.color = '#ffd93d';

            // Clear existing output
            output.innerHTML = '<div class="console-output-line" style="color: #00d4aa;">[INFO] Connecting to live console...</div>';

            // Start streaming
            consoleStream = stream(
                `/api/service/console/${guid}/${host}/${service}`,
                'GET',
                {},
                null,
                (event, data) => {
                    if (event === 'stdout' || event === 'stderr') {
                        const lines = data.split('\n');
                        for (const line of lines) {
                            if (line.trim()) {
                                const color = event === 'stderr' ? '#ff6b6b' : '';
                                output.innerHTML += `<div class="console-output-line" style="${color ? 'color: ' + color : ''}">${line}</div>`;
                            }
                        }
                        output.scrollTop = output.scrollHeight;
                    } else if (event === 'error') {
                        output.innerHTML += `<div class="console-output-line" style="color: #ff6b6b;">[ERROR] ${data}</div>`;
                        output.scrollTop = output.scrollHeight;
                    }
                },
                false
            );

            // Mark as streaming
            isConsoleStreaming = true;
            statusEl.innerHTML = '<i class="fas fa-circle" style="color: #00d4aa;"></i> Live';
            statusEl.style.color = '#00d4aa';

            // Handle stream end
            consoleStream.then(() => {
                output.innerHTML += '<div class="console-output-line" style="color: #ffd93d;">[INFO] Console stream ended</div>';
                output.scrollTop = output.scrollHeight;
                stopConsoleStream();
            }).catch((err) => {
                output.innerHTML += `<div class="console-output-line" style="color: #ff6b6b;">[ERROR] Stream error: ${err.message || 'Unknown error'}</div>`;
                output.scrollTop = output.scrollHeight;
                stopConsoleStream();
            });
        }

