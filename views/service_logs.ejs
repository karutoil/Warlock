<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Warlock - Service Logs</title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.0.0/css/all.min.css">
    <link href="https://fonts.googleapis.com/css2?family=Orbitron:wght@400;700;900&family=Rajdhani:wght@300;400;600;700&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="/frontend.css">
    <link rel="stylesheet" href="/themes.css">
    <script src="/common.js"></script>
</head>
<body data-use-app-background="1">
<%- include('partials/nav.ejs') %>

    <div class="main-container" style="grid-template-columns: 1fr; max-width: 1600px;">
        <main class="content-area">
            <div class="content-header" data-use-app-header="1">
                <div class="content-header-inner">
                    <h2>
                        <i class="fas fa-align-justify"></i>
                        Service Logs
                    </h2>
                    <div class="content-header-buttons"></div>
                    <p>
                        Log output for <span class="service-service-placeholder">SERVICE NAME</span>
                        in <span class="app-name-placeholder">APPLICATION NAME</span>
                        on <span class="host-name-placeholder">HOSTNAME OR IP</span>
                    </p>
                </div>
            </div>
            
            <div class="content-body">
                <div id="logsContainer"></div>
            </div>
        </main>
    </div>

    <%- include('partials/theme-selector.ejs') %>

    <script src="/service_logs.js"></script>
</body>
</html>
